---
import MSPALayout from '../layouts/MSPALayout.astro';
const canonical = Astro.site ? new URL('/options', Astro.site).toString() : undefined;
---
<MSPALayout title="Options" description="Preferences and appearance." canonical={canonical}>
  <h1>Options</h1>
  <p class="muted">Any changes you make here are applied immediately and saved to this browser.</p>

  <div class="opt-list">
    <!-- Desktop mode -->
    <div class="opt-row">
      <div class="opt-label"></div>
      <div class="opt-control">
        <div class="check-line">
          <input id="opt-desktop" type="checkbox" />
          <label for="opt-desktop" class="opt-title">Desktop mode</label>
        </div>
        <div class="opt-desc">Use a layout better suited for reading on a desktop computer.</div>
      </div>
    </div>

    <!-- Automatically open logs -->
    <div class="opt-row">
      <div class="opt-label"></div>
      <div class="opt-control">
        <div class="check-line">
          <input id="opt-autologs" type="checkbox" />
          <label for="opt-autologs" class="opt-title">Automatically open logs</label>
        </div>
        <div class="opt-desc">Chat logs in Bards Quest will start opened instead of collapsed.</div>
      </div>
    </div>

    <!-- Keyboard navigation -->
    <div class="opt-row">
      <div class="opt-label"></div>
      <div class="opt-control">
        <div class="check-line">
          <input id="opt-keyboard" type="checkbox" />
          <label for="opt-keyboard" class="opt-title">Keyboard navigation</label>
        </div>
        <div class="opt-desc">Use arrow keys to change pages and space to open/close logs.</div>
      </div>
    </div>

    <!-- Page theme -->
    <div class="opt-row">
      <div class="opt-label"></div>
      <div class="opt-control">
        <div class="opt-title">Page theme</div>
        <div class="opt-desc">Choose a theme for reading. "Default" uses page-specific themes. "Space" keeps the default look. Other themes override page defaults (unless a page forces its theme).</div>
        <select id="opt-theme">
          <option value="default">Default (Page-Specific)</option>
          <option value="space">Space</option>
          <option value="breath">Breath</option>
          <option value="light">Light</option>
          <option value="time">Time</option>
          <option value="heart">Heart</option>
          <option value="mind">Mind</option>
          <option value="hope">Hope</option>
          <option value="rage">Rage</option>
          <option value="life">Life</option>
          <option value="doom">Doom</option>
          <option value="blood">Blood</option>
          <option value="void">Void</option>
        </select>
      </div>
    </div>

    <!-- Page font -->
    <div class="opt-row">
      <div class="opt-label"></div>
      <div class="opt-control">
        <div class="opt-title">Page font</div>
        <div class="opt-desc">The font to use for page titles and text.</div>
        <select id="opt-page-font">
          <option value="system">System UI</option>
          <option value="inter">Inter</option>
          <option value="comic">Comic Sans</option>
        </select>
      </div>
    </div>

    <!-- Font size -->
    <div class="opt-row">
      <div class="opt-label"></div>
      <div class="opt-control">
        <div class="opt-title">Font size</div>
        <div class="opt-desc">The font size to use for comic text.</div>
        <input id="opt-text-size" type="range" min="14" max="22" step="1" value="18" />
        <span id="val-text-size" class="range-val">18px</span>
      </div>
    </div>

    <!-- High contrast text colors -->
    <div class="opt-row">
      <div class="opt-label"></div>
      <div class="opt-control">
        <div class="check-line">
          <input id="opt-contrast" type="checkbox" />
          <label for="opt-contrast" class="opt-title">High contrast text colors</label>
        </div>
        <div class="opt-desc">Use high contrast colors for colored text, such as chat logs in Bards Quest.</div>
      </div>
    </div>


  </div>

  <script src="/js/options.js" defer></script>
</MSPALayout>
